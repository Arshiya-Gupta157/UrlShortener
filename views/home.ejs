<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>

<body>
    <h1>URL Shortener</h1>

    <% if(locals.im){ %>
        <h3>Url Generated: http://localhost:3000/url/<%= im %>
        </h3>
    <% } %>

    <form method="post" action="/url">
        <label>Enter Your Original URL</label>
        <input type="text" name="url" placeholder="https://example.com/">
        <button type="submit">Generate</button>
    </form>

    <% if(locals.allLinks){ %>
        <table>
            <thead>
                <th>Sr. No.</th>
                <th>Short Link</th>
                <th>Original Link</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% allLinks.forEach((url, index) => { %>
                    <tr>
                    <td><%= index+1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.ori_link %></td>
                    <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
    
</body>

</html>